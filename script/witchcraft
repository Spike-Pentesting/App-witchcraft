#!/usr/bin/env perl
use lib 'lib';
use utf8;
use warnings;
use constant debug => $ENV{DEBUG};
use App::witchcraft::Command;

$|=1;

binmode STDOUT, ':utf8';

my $act = shift;

$SIG{INT} = sub {
    exit;
};
App::witchcraft::Command->global_help and exit if (defined $act and $act eq "--help");
App::witchcraft::Command->invoke( ($act || 'help') , @ARGV );
exit;
